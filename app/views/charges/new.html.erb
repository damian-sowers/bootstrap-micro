<%= render "shared/nav" %>
<div class="container">
	<%= render :partial => "shared/flash", :locals => { :flash => flash } %>

	<div class="row">
		<div class="span8">
			<div class="well">
				<%= form_tag charges_path do %>
				<h2>Order Summary</h2>
					<hr>
					<%= image_tag "theme-default.jpg", style: "width:200px; float:left; margin-right:15px;" %>
					<h3>Micro Theme: <%= @theme %> </h3> 
					<p>Author: Damian Sowers</p>
				  <h3>Total: $<%= @amount.to_f/100 %> </h3>
				  <hr>
				  <input type="hidden" name="theme_id" value="<%= @theme_id %>" />
				  <input type="hidden" name="theme" value="<%= @theme %>" />
				  <input type="hidden" name="amount" value="<%= @amount %>" />
				  <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
				          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
				          data-description="Theme: <%= @theme %>"
				          data-address="true"
				          data-amount="<%= @amount %>"></script>
				<% end %>
			</div>
		</div>
		<div class="span4">
			<div class='row'>
				<div class="span4">
					<%= image_tag "lock.jpg", style: "width:30px" %>
					<%= image_tag "glossy.png" %>					
					<hr>
					Questions? Send me an <a href="mailto:bootstrapmicro@gmail.com">email</a>.
				</div>
			</div>
		</div>
</div>
