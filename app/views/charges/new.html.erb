<%= render "shared/nav" %>
<div class="container">
	<%= render :partial => "shared/flash", :locals => { :flash => flash } %>

	<div class="row">
		<div class="span8">
			<div class="well">
				<%= form_tag charges_path do %>
				<h2>Order Summary</h2>
					<hr>
					<%= image_tag "theme-default.jpg", style: "width:200px; float:left; margin-right:15px;" %>
					<h3>Micro Theme: <%= @theme %> </h3> 
					<p>Author: Damian Sowers</p>
				  <h3>Total: $<%= @amount.to_i/100 %> </h3>
				  <hr>

				  <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
				          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
				          data-description="A month's subscription"
				          data-amount="<%= @amount %>"></script>
				<% end %>
			</div>
		</div>
		<div class="span4">
			<div class='row'>
				<div class="span4">
					<%= image_tag "lock.jpg" %>
				</div>
			</div>
			<br/>
			<b>Secured by Stripe</b>
		</div>
</div>

<%= render "shared/footer" %>